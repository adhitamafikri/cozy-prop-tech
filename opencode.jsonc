{
    "$schema": "https://opencode.ai/config.json",
    "theme": "opencode",
    "autoupdate": true,
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "headers": {
                "Authorization": "Bearer {env:CONTEXT7_API_KEY}"
            },
            "enabled": false
        },
        "chrome-devtools": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "chrome-devtools-mcp@latest"
            ],
            "enabled": false
        },
        "notion": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "mcp-remote",
                "https://mcp.notion.com/mcp"
            ],
            "enabled": false
        }
    }
}